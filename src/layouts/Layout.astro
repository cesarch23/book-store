---
import Navbar from "../components/Navbar.astro"
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro Basics</title>
	</head>
	<body>
		<div class="container">
			<header class="header">
				 <Navbar></Navbar>
			</header>
			<div class="sidebar">
			</div>
			<main class="main">
				<slot />
			</main>
		</div>
	</body>
</html>
<style is:global>
	:root{
		--color-base:#b3b3b3;
		--color-white:#fff;
		 
	}
	*,*::after,*::before{
		box-sizing: border-box;
		padding: 0;
		margin: 0;
	}
	html{
		font-size: 62.5%;
		 font-family:  sans-serif;
	}
	body{
		background-color: #000000;
		
	}
	input{
		font-size: 16px;
	}
	.container{
		height: 100dvh;
		display: grid;
		grid-template-areas: "header header"
							 "sidebar main";
		grid-template-columns: 1fr 3fr;
		grid-template-rows: 6.4rem 1fr;
		column-gap:.8rem;
		padding-bottom: 1.6rem;
	}
	.header{
		grid-area: header;
	}
	.sidebar{
		grid-area: sidebar;
		background-color: #121212;
		border-radius: .8rem;
		margin-left: .8rem;
	}
	.main{
		grid-area: main;
		border-radius: .8rem;
		margin-right: .8rem;
		background-color: #121212;
	}

</style>	
 
