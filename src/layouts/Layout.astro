---
import Navbar from "../components/Navbar.astro"
import Sidepanel from "../components/Sidepanel.astro"
import HamburgerMenu from "../icons/HamburgerMenu.astro"
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro Basics</title>
	</head>
	<body>
		<div class="container">
			<header class="header">
				 <Navbar></Navbar>
			</header>
			<div class="sidebar">
				<Sidepanel></Sidepanel>
			</div>
			<main class="main">
				<slot />
			</main>
		</div>
	</body>
</html>
<style is:global>
	:root{
		--color-base:#b3b3b3;
		--color-white:#fff;
		--color-secondary:#121212;
	}
	*,*::after,*::before{
		box-sizing: border-box;
		padding: 0;
		margin: 0;
	}
	html{
		font-size: 62.5%;
		 font-family:  sans-serif;
	}
	body{
		background-color: #000000;
		height: 100vh;
	}
	input{
		font-size: 16px;
	}
	p{
		font-size: 1.6rem;
	}
	.container{
		position: relative;
		display: grid;
		grid-template-areas: "header"
							 "main";
		grid-template-columns: auto;
	}
	.header{
		grid-area: header;
		height: 6.4rem;
	}
	.sidebar{
		display: none;
		position: absolute;
		z-index: 800;
		background-color: var(--color-secondary, #121212);
		border-radius: .8rem;
		margin-left: .8rem;
		height: calc(100vh - 6.4rem);
		overflow-y: hidden;
	}
	.main{
		grid-area: main;
		border-radius: .8rem;
		margin-right: .8rem;
		background-color: var(--color-secondary, #121212);
		height: calc( 100vh - 6.4rem );
		scrollbar-color: hsla(0, 0%, 100%, 0.15)  var(--color-secondary);
		overflow: auto;
		color: #fff;
		padding: .8rem 1.6rem;
	}
	@media (width >= 768px) {
		.container{
		 
			display: grid;
			grid-template-areas: "header header"
								"sidebar main";
			grid-template-columns: auto 3fr;
			column-gap:.8rem;
			
		}
		.header{
			grid-area: header;
		}
		.sidebar{	
			display: block;
			position: relative;
		}
		.main{
			grid-area: main;
			padding: 1.6rem 3.2rem;
		}
		 
	}
</style>	
 
