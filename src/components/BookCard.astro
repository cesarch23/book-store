---
import RatingStars from './RatingStars.astro';
interface Props{
    id:number;
    image:string;
    title:string;
    price:number;
    author:string;
    stars:number;
    href:string;
    
}
const {title, image,author,stars,id, price,href } = Astro.props
---
<a href=`/books/${href}` class="book" id={id.toString()}  >
    <img class="book__image"  src={image} alt=`Imagen del libro de ${title}`>
    <div class="book__text-content">
        <div class="book__headline">
            <p class="book__title"   >
                {title}
            </p>
            <p class="book__subhead">
               {author}
            </p>
        </div>
        <div class="book__support">
            <div class="book__stars">  
                <RatingStars rating={stars}/> 
            </div>
            <p class="book__price"> ${price}</p>
        </div>
        <button class="book__button" > AÃ±adir al carrito</>
    </div>
</a>
<style>
        .book {
            text-decoration: none;
            display: block;
            cursor: pointer;
            min-width: 22rem;
            border-radius: 1.2rem;
            background-color:hsla(0, 0%, 0%);
            box-shadow: 0px 1px 2px 0px rgba(255, 255, 255, 0.3), 0px 1px 3px 1px rgba(255, 255, 255, 0.15);
            
        }
        .book:hover{
            filter: contrast(1.25);
            box-shadow: 0px 1px 2px 0px rgba(255, 255, 255, 0.3), 0px 2px 6px 2px rgba(255, 255, 255, 0.15);
        }   
        .book__image {
            display: block;
            max-width: 100%;
            width: 100%;
            height: 100%;
            aspect-ratio:165/251;
            border-radius: 1.2rem;
            /* object-fit: cover; */
        }
        .book__text-content{
            padding: 1.6rem;
            display: flex;
            flex-direction: column;
            
        }
        .book__headline{
            
        }
        .book__title{
            font-size: 1.6rem;
            color: hsl(0, 0%, 80%);
        }
        .book__title, .book__subhead{  
            font-weight: 400;
            overflow: hidden;
            display: -webkit-box;
            -webkit-box-orient: vertical;
            -webkit-line-clamp: 3;
         
        }
        .book__subhead{
            font-size: 1.4rem;
            color: hsl(0, 0%, 50%);
        }
        .book__support{
            
        }
        .book__price{
            font-size: 1.8rem;
            color: hsl(0, 0%, 80%);
            padding-bottom:.8rem;
        }
        .book__stars{
           padding: .8rem 0;
        }
        
        .book__button{
            cursor: pointer;
            border: none;
            background-color: hsl(212, 100%, 41%);
            border-radius: 10rem;
            padding: .8rem 1.6rem;
            color: #fff;
            font-size: 1.6rem;
            font-weight: 600;
        }
        

</style>
