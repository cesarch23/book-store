---
interface Props{
    image:string;
    isList:boolean;
    name:string;
    isForHome?:boolean;

}
const {  image, isList, name , isForHome} = Astro.props
---
<a href="#" class=`card ${isForHome ? "card--bg":""}`>
    <img src=`${image}` alt=`imagen de una  ${name}` class=`card__image ${isList ? "":"circle"} ` >
    <div class="card__text">
        <p>{name}</p>
        <span >{isList ? "Lista":"Autor"}</span>
    </div>
</a>
<style>
    .card{
        display: flex;
        align-items: center;
        gap: 1.2rem;
        width: 100%;
        padding:.8rem;
        text-decoration: none;
        border-radius: .4rem;
    }
    .card:hover{
        background-color: hsla(0, 0%, 100%, 0.15);
    }
    .card--bg{
        background-color: hsla(0, 0%, 100%, 0.06);
    }
    .card:hover .card__image{
        opacity: .5;
    }
    .card__image{
        display: block;
        object-fit: cover;
        /* max-width: 100%; */
        max-height: 100%;
        width: 4.8rem;
        aspect-ratio: 1/1;

    }
    .circle{
        border-radius: 50rem;
    }
    .card__text{
         
        display: flex;
        flex-direction: column;
        gap: .4rem;
        overflow-x: clip;
         

    }
    .card__text p{
        color: #fff;
        font-weight: 500;
        overflow: clip;
        display: -webkit-box;
        -webkit-box-orient: vertical;
        -webkit-line-clamp: 1;
    }
    .card__text span{
        color: var(--color-base);
        font-weight: 400;
        font-size: 1.4rem;

    }
</style>