---
const { labelText } = Astro.props
---
<button class="chip">
    <span> { labelText }</span>
</button>
<style>
    .chip{
        height: 3.2rem;
        padding: .8rem 1.6rem;
        background-color: hsla(0, 0%, 100%, .1);
        font-size: 1.4rem;
        font-weight: 600;
        color: #fff;
        border-radius: .8rem;
        border-radius: 50rem; 
        transition: background-color 400ms ease;
        border: none;
        cursor: pointer;
    }
    .chip:hover{
        background-color: hsla(0, 0%, 100%, 0.15);
        
    }
</style>